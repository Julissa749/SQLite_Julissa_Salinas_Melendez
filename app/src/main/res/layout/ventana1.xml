<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="40dp"
    android:background="@drawable/scol"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="Busqueda por código"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/edbusc"
        android:layout_width="344dp"
        android:layout_height="51dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/syes"
        android:hint="Ingrese el código"
        android:inputType="number"
        android:padding="8dp"
        android:paddingLeft="25dp"></EditText>

    <Button
        android:id="@+id/busc"
        android:layout_width="277dp"
        android:layout_height="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/sali"
        android:drawablePadding="0dp"
        android:paddingLeft="10dp"
        android:shadowColor="#1EE41515"
        android:shadowDx="-3"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:text="BUSCAR"
        android:textColor="#EAE4E4"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/cancelbusc"
            android:layout_width="wrap_content"
            android:src="@drawable/cancel"
            android:layout_height="wrap_content">

        </ImageButton>
    </LinearLayout>
</RelativeLayout>