<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/fondo1"
    tools:context=".activity_consulta">

    <TextView
        android:layout_width="228dp"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:text="Seleccione una Opción"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <Spinner
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/spinn"
        android:spinnerMode="dropdown"
        android:padding="15dp"
        android:drawSelectorOnTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <TextView
        android:id="@+id/codg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:text="Código"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/descripc"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:text="Descripción"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
     android:id="@+id/pin"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:text="Precio"
    android:textColor="#000000"
    android:textStyle="bold"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
</TextView>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        app:fab_addButtonColorNormal="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982"
        tools:ignore="MissingConstraints">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/uno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/brown"
            app:fab_icon="@drawable/ic_search"
            app:fab_title="salir" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/dos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/green"
            app:fab_icon="@drawable/ic_search"
            app:fab_title="autor" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/tres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#2196F3"
            app:fab_icon="@drawable/cancel"
            app:fab_title="retornar" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</LinearLayout>